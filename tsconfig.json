{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "declaration": true,
    "outDir": "build",
    "sourceMap": true,
    "lib": ["dom", "es7"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "noErrorTruncation": true
  },
  "include": ["src"]
}
